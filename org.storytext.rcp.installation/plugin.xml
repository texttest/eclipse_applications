<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.storytext.rcp.installation.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.storytext.rcp.installation.application"
            name="StoryText Test Product">
         <property
               name="appName"
               value="StoryText Test Product">
         </property>
      </product>
   </extension>

</plugin>
